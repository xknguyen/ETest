@model QuestionDetail
<div class="choice-question-content">
    @foreach (var choice in Model.Choices)
    {
        var name = "choice-answer-box-" + Model.QuestionDetailId;
        <div class="col-md-12 choice-question">
            <div class="@(Model.IsSingleChoice ? "radio" : "checkbox") i-checks" data-id="@choice.ChoiceId">
                <label>
                    @(Model.IsSingleChoice ? Html.RadioButton(name, false, new { @class = "form-control" }) : Html.CheckBox("choice-answer-box-" + Model.QuestionDetailId, false, new { @class = "form-control" }))
                    <span class="choice-content">@choice.Content</span>
                </label>
            </div>
        </div>
    }
</div>