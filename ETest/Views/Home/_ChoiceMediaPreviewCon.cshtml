@model AnswerDetail
@{
    foreach (var choice in Model.Choices)
    {
        Model.QuestionDetail.Choices.Find(s => s.ChoiceId == choice).IsCorrect = true;
    }
}
<div class="choice-question-content">
    @foreach (var choice in Model.QuestionDetail.Choices)
    {
        <div class="col-md-4 choice-question">
            <div class="@(Model.QuestionDetail.IsSingleChoice ? "radio" : "checkbox") i-checks" data-id="@choice.ChoiceId">
                <label>
                    @(Model.QuestionDetail.IsSingleChoice ?
                          Html.RadioButton("choice-answer-box-" + Model.QuestionDetailId, choice.IsCorrect, new {@class = "form-control"}) :
                          Html.CheckBox("choice-answer-box-" + Model.QuestionDetailId, choice.IsCorrect, new {@class = "form-control"}))
                    <img class=" choice-content" src="@choice.Content"/>
                </label>
            </div>
        </div>
    }
</div>
