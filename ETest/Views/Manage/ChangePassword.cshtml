@model ChangePasswordViewModel
@{
    ViewBag.Title = "Đổi mật khẩu";
}
<div class="row">
    <div class="col-sm-8" style="margin: 0 auto; float: none">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { role = "form", id = "account-register" }))
        {
            @Html.AntiForgeryToken()
            <h4>Đổi mật khẩu</h4>
            <hr/>
            <input type="password" class="hidden" name="facePassword"/>
                            @(Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" }))

                            <div class="form-group">
                                @Html.LabelFor(m => m.OldPassword, new { @class = "sr-only" })
                                @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", type = "Password", autocomplete = "off", placeholder = "Mật khẩu hiện tại", data_toggle = "popover", data_placement = "left", data_trigger = "focus", data_content = "Nhập mật khẩu hiện tại", data_original_title = "Mật khẩu hiện tại" })
                            </div>
                            @(Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" }))
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password, new { @class = "sr-only" })
                                @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "Password", autocomplete = "off", placeholder = "Mật khẩu mới", data_toggle = "popover", data_placement = "left", data_trigger = "focus", data_content = "Nhập mật khẩu mới", data_original_title = "Mật khẩu mới" })
                            </div>

                            @(Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" }))
                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "sr-only" })
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", type = "Password", autocomplete = "off", placeholder = "Nhập lại mật khẩu mới", data_toggle = "popover", data_placement = "left", data_trigger = "focus", data_content = "Nhập lại mật khẩu mới", data_original_title = "Nhập lại" })
                            </div>

                            <button type="submit" class="btn btn-theme-primary">Đổi mật khẩu</button>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Content/js/sign-up.js"></script>
}
