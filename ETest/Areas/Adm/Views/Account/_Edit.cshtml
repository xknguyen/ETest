@model EditAccountModel
<input type="password" style="display: none;" name="facePassword">
<input type="text" style="display: none;" name="faceUsername">

<div class="form-group">
    @(Html.LabelFor(model => model.Identity, new { @class = "control-label col-md-2" }))
    <div class="col-md-10">
        @(Html.EditorFor(model => model.Identity, new
    {
        htmlAttributes = new
        {
            @class = "form-control"
        }
    }))
        @(Html.ValidationMessageFor(model => model.Identity, "", new { @class = "text-danger" }))
    </div>
</div>

