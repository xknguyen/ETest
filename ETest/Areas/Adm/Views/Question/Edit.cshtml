@model Question
@{
    ViewBag.Title = "Quản lý câu hỏi";
}
@section pluginStyles
{
    <link href="~/Content/AdmGrid.css" rel="stylesheet" />
    <link href="~/Content/plugins/iCheck/custom.css" rel="stylesheet" />
    <link href="~/Content/custom/question.css" rel="stylesheet" />
}

<div class="row">

    <div class="col-md-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tạo câu hỏi mới</h5>
            </div>
            <div class="ibox-content p-sm">
                @using (Html.BeginForm("Edit", "Question", FormMethod.Post, new { enctype = "multipart/form-data", id = "questionForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(s=>s.QuestionId)
                    @Html.HiddenFor(s=>s.RowVersion)
                    <div class="form-horizontal">
                        @(Html.ValidationSummary(true, "", new { @class = "text-danger", id = "Validation" }))
                        @Html.Partial("_CreateOrEdit", Model)
                        @Html.Partial("_QuestionContent", Model)
                        <div class="hr-line-dashed"></div>
                        @Html.Partial("_Toolbar")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/admjqueryval")
    <script src="~/Scripts/jquery.nestable.js"></script>
    <script src="~/Scripts/plugins/iCheck/icheck.min.js"></script>
    <script src="~/Scripts/tinymce/tinymce.min.js"></script>
    <script src="~/Scripts/plugins/chosen/chosen.jquery.js"></script>
<script src="~/Scripts/custom/Utilities.js"></script>
    <script src="~/Scripts/custom/createQuestion.js"></script>
    <script src="~/Scripts/custom/choiceTemplate.js"></script>
    <script src="~/Scripts/custom/question.js"></script>
}
