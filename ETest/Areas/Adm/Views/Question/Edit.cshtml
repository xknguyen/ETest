@model Question
@{
    ViewBag.Title = "Quản lý câu hỏi";
}
@section pluginStyles
{
    @Styles.Render("~/bundles/questionstyle")
}

<div class="row">

    <div class="col-md-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Tạo câu hỏi mới</h5>
            </div>
            <div class="ibox-content p-sm">
                @using (Html.BeginForm("Edit", "Question", FormMethod.Post, new {enctype = "multipart/form-data", id = "questionForm"}))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(s => s.QuestionId)
                    @Html.HiddenFor(s => s.RowVersion)
                    <div class="form-horizontal">
                        @(Html.ValidationSummary(true, "", new {@class = "text-danger", id = "Validation"}))
                        @Html.Partial("_CreateOrEdit", Model)
                        @Html.Partial("_QuestionContent", Model)
                        <div class="hr-line-dashed"></div>
                        @Html.Partial("_Toolbar")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="questionTemplate" id="choiceTemplate">
    @Html.Partial("_ChoiceTemplate", new QuestionDetail() { Choices = new List<Choice>() { new Choice() { ChoiceId = 1 } } })
</div>
<div class="questionTemplate" id="orderTemplate">
    @Html.Partial("_OrderTemplate", new QuestionDetail() { ItemOrders = new List<ItemOrder>() { new ItemOrder() { ChoiceId = 1 }, new ItemOrder() { ChoiceId = 2 } } })
</div>
<div>
    @Html.Partial("_Popup")
</div>


@section scripts
{
    @Scripts.Render("~/bundles/admjqueryval")
    @Scripts.Render("~/bundles/questionjs")
}
