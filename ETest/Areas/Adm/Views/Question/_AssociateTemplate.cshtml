@model QuestionDetail
@{
    Model.AssociateItems = Model.AssociateItems.OrderBy(s => s.OrderNo).ToList();
}
<li class="dd-item dd3-item questions" data-type="Associate" data-id="0">
    <div class="pull-right m-r-md m-t-sm">
        <a href="#" class="question-remove"><i class="fa fa-close"></i></a>
    </div>
    <div class="dd-handle dd3-handle question-type">Associate</div>
    <div class="dd3-content question-border">
        <div class="row">
            <div class="col-md-12">
                <div class="form-horizontal">
                    <div class="form-group quetion-control">
                        <div class="col-md-12">
                            <div class="description-content">
                               @Html.TextArea("QuestionTitle-" + Model.OrderNo, Model.QuestionTitle, new { @class = "form-control description", placeholder = "Nhập nội dung câu hỏi" })
                            </div>
                            <span class="field-validation-valid text-danger question-title-error"></span>
                        </div>
                    </div>
                    <div class="form-group  quetion-control">
                        <div class="answers">
                            <span class="field-validation-valid text-danger question-answers-error"></span>
                            @foreach (var associate in Model.AssociateItems)
                            {
                                <div class="col-md-12 question-answer">
                                    <div class="col-md-11 question-associate">
                                        <div class="col-md-6">
                                            @Html.Hidden("choiceLeftId", associate.Associate.AssociateId)
                                            @Html.TextBox("answerLeft", associate.Associate.Content, new {placeholder = "Nhập nội dung đáp án", @class = "form-control answer"})
                                        </div>
                                        <div class="col-md-6">
                                            @Html.Hidden("choiceRightId", associate.AssociateId)
                                            @Html.TextBox("answerRight", associate.Content, new { placeholder = "Nhập nội dung đáp án", @class = "form-control answer" })
                                        </div>
                                    </div>
                                    <div class="col-md-1 question-form answer-remove">
                                        <div class="col-md-6 question-form question-close">
                                            <a href="#" class="remove-answer-choice">
                                                <i class="fa fa-close"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="col-md-12 question-answer">
                            <a class="button btn btn-primary add-associate-answer" data-id="@Model.AssociateItems.Count">
                                <i class="fa fa-plus-circle"></i> Thêm đáp án
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</li>
 

