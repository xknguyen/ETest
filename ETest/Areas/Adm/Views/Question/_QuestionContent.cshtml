@model Question

<div class="form-group">
    <div class="col-md-2 " style="background: white">
        <div class="col-md-3"></div>
        <div id="typeQuestion" class="dd col-md-9 questions">
            <ol class="dd-list">
                <li class="dd-item new-question" data-type="Choice">
                    <div class="dd-handle">
                        Choice
                    </div>
                </li>
                <li class="dd-item  new-question" data-type="Order">
                    <div class="dd-handle">
                        Order
                    </div>
                </li>
                <li class="dd-item  new-question" data-type="Associate">
                    <div class="dd-handle">
                        Associate
                    </div>
                </li>
                <li class="dd-item new-question" data-type="Gap">
                    <div class="dd-handle">
                        Gap
                    </div>
                </li>
                <li class="dd-item new-question" data-type="Inline">
                    <div class="dd-handle">
                        Inline
                    </div>
                </li>
                <li class="dd-item new-question" data-type="Slider">
                    <div class="dd-handle">
                        Slider
                    </div>
                </li>
            </ol>
        </div>
    </div>

    <div class="col-md-10" style="background: white">
        <div id="contentQuestion" class="dd questions">

            @if (Model.QuestionDetails == null || Model.QuestionDetails.Count == 0)
            {
                @Html.Partial("_GapTemplate", new QuestionDetail()
           {
               QuestionTitle = "Hứ, vậy cũng phải coi <input type='text' /> có cái gì đáng để cho tôi phải nhìn chằm chằm, tự cao vừa vừa thôi, tôi đây không có hứng với cậu. Vân thấy cậu ta vẫn cái miệng mồm đáng ghét đó mà thấy bực, phải biết rằng giây phút này cô rất muốn đánh người,"
                                    + "tên đầu heo này lại tới chọc, chán sống rồi.",
               GapItems = new List<GapItem>()
               {
                   new GapItem()
                   {
                       ItemId = 1,
                       ItemContent = "Hứ, vậy cũng phải coi lại cậu có cái gì đáng"
                   }
               }
           })
                @*<div class="dd-empty"></div>*@
            }
            else
            {
                <ol class="dd-list">
                    @foreach (var detail in Model.QuestionDetails)
                    {
                        switch (detail.QuestionType)
                        {
                            case QuestionType.Choice:
                                @Html.Partial("_ChoiceTemplate", detail)
                                break;
                            case QuestionType.Order:
                                @Html.Partial("_OrderTemplate", detail)
                                break;
                            case QuestionType.Associate:
                                break;
                            case QuestionType.Gap:
                                break;
                            case QuestionType.Inline:
                                break;
                            case QuestionType.Upload:
                                break;
                            case QuestionType.Slider:
                                break;

                        }
                    }
                </ol>
            }
        </div>
    </div>
</div>